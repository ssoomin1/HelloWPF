<Window x:Class="HelloWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn1" Content="버튼" HorizontalAlignment="Center" 
                FontSize="80" FontWeight="Bold"
                Margin="0,132,0,0" VerticalAlignment="Top" Height="160" Width="308" Click="Button_Click"/>
        <Button x:Name="btn2" Content="Button" HorizontalAlignment="Left" Margin="636,345,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.796,-2.036" Height="49" Width="95" Click="btn2_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.483"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
